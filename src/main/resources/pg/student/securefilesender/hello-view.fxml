<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.text.Text?>
<HBox spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="pg.student.securefilesender.controllers.HelloController">
    <children>
        <AnchorPane prefHeight="360.0" prefWidth="320.0" xmlns="http://javafx.com/javafx/11.0.2"
                    xmlns:fx="http://javafx.com/fxml/1">
            <Text AnchorPane.leftAnchor="5.0" AnchorPane.topAnchor="10.0">IP: </Text>
            <TextField fx:id="nameIP" AnchorPane.leftAnchor="20.0" AnchorPane.topAnchor="5.0"/>
            <Text fx:id="serverStatus" AnchorPane.leftAnchor="200.0" AnchorPane.topAnchor="10.0">Status </Text>
            <Button onAction="#uploadFile" text="Upload file"
                    AnchorPane.topAnchor="35.0" AnchorPane.leftAnchor="5.0"/>
            <Button onAction="#startConnection" text="Start server"
                    AnchorPane.topAnchor="65.0" AnchorPane.leftAnchor="5.0"/>
            <Button onAction="#waitConnection" text="Wait connection"
                    AnchorPane.topAnchor="65.0" AnchorPane.leftAnchor="150.0"/>
            <Button onAction="#closeConnection" text="Close connection"
                    AnchorPane.topAnchor="95.0" AnchorPane.leftAnchor="5.0"/>
        </AnchorPane>

        <VBox xmlns="http://javafx.com/javafx/8.0.141"
              xmlns:fx="http://javafx.com/fxml/1">
            <AnchorPane id="FilesUploaded" prefHeight="360.0" prefWidth="320.0" xmlns:fx="http://javafx.com/fxml/1">
                <children>
                    <ListView fx:id="filesUploadedList" layoutX="102.0" layoutY="14.0" prefHeight="200.0"
                              prefWidth="200.0"
                              AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                              AnchorPane.topAnchor="0.0"/>
                </children>
            </AnchorPane>
            <AnchorPane id="FilesReceived" prefHeight="360.0" prefWidth="320.0" xmlns:fx="http://javafx.com/fxml/1">
                <children>
                    <ListView fx:id="filesReceivedList" layoutX="102.0" layoutY="14.0" prefHeight="200.0"
                              prefWidth="200.0"
                              AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
                              AnchorPane.topAnchor="0.0"/>
                </children>
            </AnchorPane>
        </VBox>
    </children>
</HBox>
